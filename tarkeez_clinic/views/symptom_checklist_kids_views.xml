<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Main Checklist List View -->
    <record id="view_tarkeez_symptom_checklist_kids_list" model="ir.ui.view">
        <field name="name">tarkeez.symptom_checklist_kids.list</field>
        <field name="model">tarkeez.symptom_checklist_kids</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="appointment_id"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Symptom Line List View (for O2M and standalone) -->
    <record id="view_tarkeez_symptom_line_kids_list" model="ir.ui.view">
        <field name="name">tarkeez.symptom_line_kids.list</field>
        <field name="model">tarkeez.symptom_line_kids</field>
        <field name="arch" type="xml">
            <list>
                <field name="domain"/>
                <field name="symptom_ar"/>
                <field name="symptom_en"/>
                <field name="present"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- Main Checklist Form View -->
    <record id="view_tarkeez_symptom_checklist_kids_form" model="ir.ui.view">
        <field name="name">tarkeez.symptom_checklist_kids.form</field>
        <field name="model">tarkeez.symptom_checklist_kids</field>
        <field name="arch" type="xml">
            <form string="Kids Symptom Checklist">
                <header>
                    <button name="action_print_checklist" type="object" string="Print" class="btn-primary"/>
                    <button name="action_regenerate_symptoms" type="object" string="Regenerate Symptoms" confirm="This will reset all symptom lines. Continue?"/>
                    
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="appointment_id"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Symptoms / الأعراض">
                            <field name="item_ids">
                                <list editable="top" create="false" delete="false">
                                    <field name="display_type" invisible="1" column_invisible="1"/>
                                    <field name="sequence" widget="handle" optional="hide"/>
                                    <field name="name" string="Section Title / عنوان المجموعة" readonly="1"/>
                                    <field name="symptom_bilingual" string="Symptom (AR | EN) / العرض" readonly="1"/>
                                    <field name="present" string="Yes / نعم"/>
                                    <field name="absent" string="No / لا"/>
                                    <field name="notes" string="Notes / ملاحظات" widget="text"/>
                                </list>
                            </field>

                            <group>
                                <field name="core_symptoms" string="Core Symptoms for Kid? / الأعراض الأساسية للطفل؟"/>
                                <field name="medications" string="Any Medications or Reports? / أي أدوية أو تقارير؟"/>
                                <field name="signature" widget="signature" string="Signature / التوقيع"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    

</odoo>
