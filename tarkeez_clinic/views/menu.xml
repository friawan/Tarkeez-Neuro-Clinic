<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_tarkeez_clinic_root" name="Tarkeez Neuro Clinic" sequence="10"/>

    <!-- Actions (must be defined before menuitems that reference them) -->
    <record id="action_tarkeez_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">tarkeez.patient</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="action_tarkeez_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">tarkeez.appointment</field>
        <field name="view_mode">calendar,kanban,list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="action_tarkeez_nfb_form" model="ir.actions.act_window">
        <field name="name">NFB Forms</field>
        <field name="res_model">tarkeez.nfb_form</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="action_tarkeez_symptom_checklist_kids" model="ir.actions.act_window">
        <field name="name">Kids Symptom Checklist</field>
        <field name="res_model">tarkeez.symptom_checklist_kids</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_tarkeez_patients" name="Patients" parent="menu_tarkeez_clinic_root" sequence="10" action="action_tarkeez_patient"/>
    <menuitem id="menu_tarkeez_appointments" name="Appointments" parent="menu_tarkeez_clinic_root" sequence="20" action="action_tarkeez_appointment"/>
    <menuitem id="menu_tarkeez_nfb_forms" name="NFB Forms" parent="menu_tarkeez_clinic_root" sequence="30" action="action_tarkeez_nfb_form"/>
    <menuitem id="menu_tarkeez_symptom_checklist_kids" name="Kids Symptom Checklist" parent="menu_tarkeez_nfb_forms" sequence="40" action="action_tarkeez_symptom_checklist_kids"/>

</odoo>
