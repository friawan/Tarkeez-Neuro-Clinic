<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_tarkeez_nfb_form_tree" model="ir.ui.view">
        <field name="name">tarkeez.nfb_form.list</field>
        <field name="model">tarkeez.nfb_form</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="patient_id"/>
                <field name="appointment_id"/>
                <field name="form_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tarkeez_nfb_form_form" model="ir.ui.view">
        <field name="name">tarkeez.nfb_form.form</field>
        <field name="model">tarkeez.nfb_form</field>
        <field name="arch" type="xml">
            <form string="NFB Form">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="patient_id"/>
                            <field name="appointment_id"/>
                            <field name="form_type"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="attachment_id"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Enter notes for this form..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
