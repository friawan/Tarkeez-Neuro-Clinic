<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_tarkeez_patient_tree" model="ir.ui.view">
        <field name="name">tarkeez.patient.list</field>
        <field name="model">tarkeez.patient</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="arabic_name"/>
                <field name="gender"/>
                <field name="birth_date"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tarkeez_patient_form" model="ir.ui.view">
        <field name="name">tarkeez.patient.form</field>
        <field name="model">tarkeez.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_open_patient_appointments" icon="fa-calendar">
                            <field string="Appointments" name="appointment_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_open_patient_nfb_forms" icon="fa-file-text-o">
                            <field string="NFB Forms" name="nfb_form_count" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="arabic_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Appointments">
                            <field name="appointment_ids">
                                <list editable="bottom">
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="practitioner_id"/>
                                    <field name="session_type"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="NFB Forms">
                            <field name="nfb_form_ids">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="form_type"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
