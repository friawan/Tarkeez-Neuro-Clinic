<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- تمبلِيت التقرير نفسه -->
        <template id="symptom_checklist_kids_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                @page { size: A4; margin: 10mm 10mm 10mm 10mm; }
                                .o_report_layout .header, .o_report_layout .o_header{padding:4px 0 !important;margin-bottom:6px !important}
                                .o_report_layout .footer, .o_report_layout .o_footer{padding:4px 0 !important;margin-top:6px !important;font-size:10px}
                                .sc-title{font-size:20px;font-weight:700;margin:0 0 6px 0}
                                .sc-subtle{color:#666}
                                .sc-meta{width:100%;margin-top:6px;margin-bottom:6px}
                                .sc-meta td{padding:2px 6px;font-size:12px}
                                .sc-table{width:100%;border-collapse:collapse;margin-top:4px}
                                .sc-table th,.sc-table td{border:1px solid #d9d9d9;padding:5px 7px;font-size:11px;vertical-align:top}
                                .sc-table th{background:#f5f5f5}
                                .sc-sec{background:#eef3fb;font-weight:600}
                                .box{display:inline-block;width:12px;height:12px;border:1px solid #888;text-align:center;line-height:12px;font-size:10px;border-radius:2px}
                                .yes{color:#0a6}
                                .no{color:#c33}
                                .muted{color:#888;font-size:10px}
                                .sc-section-row th{border-top:2px solid #bcd}
                            </style>

                            <div class="sc-title">Kids Symptom Checklist / قائمة أعراض الأطفال</div>
                            <table class="sc-meta">
                                <tr>
                                    <td style="width:33%"><strong>Patient:</strong> <span t-esc="o.patient_id.display_name"/></td>
                                    <td style="width:33%"><strong>Appointment:</strong> <span t-esc="o.appointment_id.display_name or ''"/></td>
                                    <td style="width:34%"><strong>Session Date:</strong> <span t-esc="o.date"/></td>
                                </tr>
                            </table>

                            <table class="sc-table">
                                <thead>
                                    <tr>
                                        <th style="width:60%">Symptom / العرض</th>
                                        <th style="width:12%" class="text-center">Yes / نعم</th>
                                        <th style="width:12%" class="text-center">No / لا</th>
                                        <th style="width:16%">Notes / ملاحظات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.item_ids" t-as="line">
                                    <t t-if="(line.display_type or False) == 'line_section'">
                                            <tr class="sc-section-row">
                                                <th class="sc-sec" colspan="4">
                                                    <t t-esc="line.domain or (line.name or '')"/>
                                                </th>
                                            </tr>
                                        </t>
                                        <t t-else="">
                                            <tr>
                                                <td>
                                                    <div><t t-esc="line.symptom_ar or ''"/></div>
                                                    <div class="muted"><t t-esc="line.symptom_en or ''"/></div>
                                                </td>
                                                <td class="text-center">
                                                    <span class="box yes"><t t-if="line.present">✓</t></span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="box no"><t t-if="not line.present">✓</t></span>
                                                </td>
                                                <td><t t-esc="line.notes or ''"/></td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>

                            <table class="sc-meta" style="margin-top:10px">
                                <tr>
                                    <td style="width:50%"><strong>Core Symptoms for Kid? / الأعراض الأساسية للطفل؟</strong><br/>
                                        <span t-esc="o.core_symptoms or ''"/>
                                    </td>
                                    <td style="width:50%"><strong>Any Medications or Reports? / أي أدوية أو تقارير؟</strong><br/>
                                        <span t-esc="o.medications or ''"/>
                                    </td>
                                </tr>
                            </table>

                            <div style="margin-top:12px">
                                <strong>Signature / التوقيع:</strong>
                                <span t-if="not o.signature" class="sc-subtle" style="margin-left:8px">____________________________</span>
                                <t t-if="o.signature">
                                    <img t-att-src="'/web/image/%s/%s/signature' % (o._name, o.id)" style="max-height:80px; margin-left:8px"/>
                                </t>
                            </div>
                            <div style="page-break-after:always"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
