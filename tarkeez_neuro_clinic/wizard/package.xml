<odoo>
    <record id="view_patient_package_wizard_form" model="ir.ui.view">
        <field name="name">patient.package.wizard.form</field>
        <field name="model">patient.package.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Package / Session">
                <sheet>
                    <group>
                        <group>
                            <field name="service_id"/>
                        </group>
                        <group>
                            <field name="is_package" widget="boolean_toggle" readonly="1" />
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
