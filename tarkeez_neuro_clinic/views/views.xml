                        A partner with the same
                        <span>
                            <span class="o_vat_label">Company Registry</span>
                        </span>
                        already exists (<field name="same_company_registry_partner_id"
                                               context="{'show_address': False, 'show_vat': False}"/>), are you sure to
                        create a new one?
                    </div>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <field name="avatar_128" invisible="1"/>
                        <field name="image_1920" widget="image" class="oe_avatar"
                               options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                        <div class="oe_title mb24">
                            <field name="is_company" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <h1>
                                <field id="company" options="{'line_breaks': False}" widget="text" class="text-break"
                                       name="name" default_focus="1" placeholder="e.g. Lumber Inc"/>

                            </h1>
                            <h3>
                                <field name="code" invisible="1"/>


                            </h3>

                        </div>

                        <group>
                            <group>
                                <field name="code"/>
                                <field name="city" placeholder="City" class="o_address_city" readonly=""/>
                                <field name="gender"/>
                                <field name="birthday"/>
                                <field name="patient_age"/>
                                <field name="age_group"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="phone" widget="phone"/>

                                <field name="email" placeholder="e.g. example@gmail.com" invisible="is_company"/>
                                <field name="user_ids" invisible="1"/>
                                <field name="active_lang_count" invisible="1"/>
                                <field name="doctor_id" options="{&quot;no_open&quot;: True}" placeholder="e.g. Dr"/>
                                <field name="signature" widget="signature"/>


                            </group>
                        </group>
                        <notebook colspan="4">


                            <page name="nfb_form" string="NFB Forms">
                                <group>
                                    <button name="action_regenerate_symptoms"
                                            type="object"
                                            string="Regenerate Symptoms"
                                            confirm="This will reset all symptom lines. Continue?"
                                            class="btn-primary"/>
                                </group>
                                <field name="symptom_line_ids" widget="sol_o2m" mode="list,kanban">
                                    <list editable="top" create="false" delete="false">
                                        <control>
                                            <create name="add_symptom" string="Add Symptom"/>
                                            <create name="add_section" string="Add Section"
                                                    context="{'default_display_type': 'line_section'}"/>
                                            <create name="add_note" string="Add Note"
                                                    context="{'default_display_type': 'line_note'}"/>
                                        </control>

                                        <!-- Section/Note name -->
                                        <field name="display_type" column_invisible="True"/>
                                        <field name="name" attrs="{'readonly': [('display_type','!=',False)]}"
                                               decoration-muted="display_type"/>
                                        <!-- Hide checkboxes for section/note lines -->
                                        <field name="present" attrs="{'invisible': [('display_type','=',False)]}"/>
                                        <field name="absent"/>
                                        <field name="notes"/>
                                    </list>
                                </field>

                                <div style="text-align: center; font-weight: bold; border-bottom: 1px solid #ccc; margin: 10px 0; padding-bottom: 3px;">
                                    Symptom  Details
                                </div>

                                <group>
                                    <group>
                                        <field name="core_symptoms"/>
                                    </group>
                                    <group>
                                        <field name="medications"/>
                                    </group>
                                </group>

                            </page>
                            <page name="follow_up" string="FOLLOW UP">
                                <group>
                                    <group>
                                        <field name="diagnosis"/>

                                    </group>
                                    <group>
                                        <field name="qid"/>

                                    </group>
                                </group>
                                <div style="text-align: center; font-weight: bold; border-bottom: 1px solid #ccc; margin: 10px 0; padding-bottom: 3px;">
                                    Follow-up Details
                                </div>


                                <field name="follow_up_ids">
                                    <list editable="bottom">
                                        <field name="date"/>
                                        <field name="protolused"/>
                                        <field name="observation"/>
                                        <field name="parent_feedback"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                            <page name="services" string="Services">
                                <field name="services_ids" widget="section_and_note_one2many" mode="list"
                                       nolabel="1" colspan="2">
                                    <list editable="bottom">
                                        <field name="services_id" option="{'no_create_edit' : True}"/>
                                        <field name="description"/>
                                        <field name="state"/>
                                        <field name="date"/>
                                        <field name="price" sum="price" widget="monetary" decoration-bf="1"/>
                                        <field name="paid" sum="paid" widget="monetary" decoration-bf="1"/>
                                        <field name="bool_field" readonly="1"/>
                                        <field name="remaining" sum="remaining" widget="monetary" decoration-bf="1"/>
                                    </list>
                                </field>

                            </page>
                        </notebook>


                    </sheet>
                    <chatter/>

                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="patients_list">
            <field name="name">doctors list</field>
