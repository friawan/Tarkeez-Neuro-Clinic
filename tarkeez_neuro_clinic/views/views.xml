<odoo>
    <data>

        <!--_______________________________appointments____________________________________-->
        <record model="ir.ui.view" id="tarkeez_neuro_appointments_list">
            <field name="name">appointments list</field>
            <field name="model">res.appointments</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <field name="is_collect" widget="boolean_toggle"/>
                </list>
            </field>
        </record>
        <record model="ir.ui.view" id="tarkeez_neuro_appointments_form">
            <field name="name">appointments list</field>
            <field name="model">res.appointments</field>
            <field name="arch" type="xml">
                <form string="appointments">
                    <header>
                        <field name="state" readonly="0" widget="statusbar" statusbar_visible="draft,in_clinic,done"
                               options="{'clickable': '1'}"
                               colors='{"draft": "warning", "in_clinic":"danger" , "done": "success"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title mb24">
                            <h1>
                                <field id="company" options="{'line_breaks': False}" widget="text" class="text-break"
                                       name="name" placeholder="e.g. Lumber Inc"/>

                            </h1>

                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="is_collect" widget="boolean_toggle"/>
                                <!--                                <field name="invoice" options="{'no_create': True, 'no_open': True}"/>-->


                            </group>
                            <group>
                                <field name="patient_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="doctor_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                                <!--                                <field name="services_id" options="{'no_create': True, 'no_open': True}"/>-->
                            </group>
                        </group>
                    </sheet>
                    <chatter/>

                </form>
            </field>
        </record>
        <record id="tarkeez_neuro_appointments_view_calendar" model="ir.ui.view">
            <field name="name">dental appointments view calendar</field>
            <field name="model">res.appointments</field>
            <field name="arch" type="xml">
                <calendar string="appointments"
                          mode="month"
                          date_start="start_date"
                          date_stop="end_date"
                          event_open_popup="true"
                          color="patient_id">

                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="patient_id" avatar_field="avatar_128"/>
                    <field name="doctor_id" avatar_field="avatar_128"/>
                    <field name="employee_id"/>
                    <field name="is_collect" widget="boolean_toggle"/>
                </calendar>
            </field>
        </record>
        <record model="ir.actions.act_window" id="tarkeez_neuro_appointments_action_window">
            <field name="name">Tarkeez Neuro Appointments</field>
            <field name="res_model">res.appointments</field>
            <field name="view_mode">calendar,list,form</field>
        </record>


        <!--__________________________doctors___________________________________________-->

        <record model="ir.ui.view" id="doctors_list">
            <field name="name">doctors list</field>
            <field name="model">res.doctors</field>
            <field name="arch" type="xml">
                <list string="Contacts" sample="1" multi_edit="1">
                    <field name="display_name" string="Name"/>
                    <field name="function" column_invisible="True"/>
                    <field name="phone" class="o_force_ltr" optional="show"/>
                    <field name="mobile" optional="hide"/>
                    <field name="email" optional="show"/>
                    <field name="city" optional="show"/>
                    <field name="state_id" optional="hide" readonly="1"/>
                    <field name="country_id" optional="show" readonly="1"/>
                    <field name="active" column_invisible="True"/>
                </list>
            </field>
        </record>
        <record model="ir.ui.view" id="doctors_form">
            <field name="name">doctors list</field>
            <field name="model">res.doctors</field>
            <field name="arch" type="xml">
                <form string="Partners">
                    <div class="alert alert-warning oe_edit_only" role="alert" name="warning_tax"
                         invisible="not same_vat_partner_id">
                        A partner with the same
                        <span>
                            <span class="o_vat_label">Tax ID</span>
                        </span>
                        already exists (<field name="same_vat_partner_id"
                                               context="{'show_address': False, 'show_vat': False}"/>), are you sure to
                        create a new one?
                    </div>
                    <div class="alert alert-warning oe_edit_only" role="alert" name="warning_company"
                         invisible="not same_company_registry_partner_id">
                        A partner with the same
                        <span>
                            <span class="o_vat_label">Company Registry</span>
                        </span>
                        already exists (<field name="same_company_registry_partner_id"
                                               context="{'show_address': False, 'show_vat': False}"/>), are you sure to
                        create a new one?
                    </div>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <field name="avatar_128" invisible="1"/>
                        <field name="image_1920" widget="image" class="oe_avatar"
                               options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                        <div class="oe_title mb24">
                            <field name="is_company" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <h1>
                                <field id="company" options="{'line_breaks': False}" widget="text" class="text-break"
                                       name="name" default_focus="1" placeholder="e.g. Lumber Inc"/>

                            </h1>

                        </div>

                        <group>
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           readonly=""/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                           readonly=""/>
                                    <field name="city" placeholder="City" class="o_address_city"
                                           readonly=""/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           readonly=""
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           readonly=""/>
                                    <div name="partner_address_country" class="d-flex justify-content-between">
                                        <field name="country_id" placeholder="Country" class="o_address_country"
                                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                               readonly=""/>
                                    </div>
                                </div>

                                <field name="signature" widget="signature"/>

                            </group>
                            <group>
                                <field name="function" placeholder="e.g. Sales Director" invisible="is_company"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="user_ids" invisible="1"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}"
                                       required="user_ids"/>

                                <field name="title" options="{&quot;no_open&quot;: True}" placeholder="e.g. Mister"
                                       invisible="is_company"/>
                                <field name="active_lang_count" invisible="1"/>
                                <field name="lang" invisible="active_lang_count &lt;= 1"/>

                            </group>
                        </group>

                    </sheet>
                    <chatter/>

                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="doctors_action_window">
            <field name="name">Doctors Tarkeez Neuro</field>
            <field name="res_model">res.doctors</field>
            <field name="view_mode">list,form,kanban</field>
        </record>
        <!--___________________________patients__________________________________________-->

        <record model="ir.ui.view" id="patients_form">
            <field name="name">patients list</field>
            <field name="model">res.patients</field>
            <field name="arch" type="xml">
                <form string="Patients">
                    <div class="alert alert-warning oe_edit_only" role="alert" name="warning_tax"
                         invisible="not same_vat_partner_id">
                        A partner with the same
                        <span>
                            <span class="o_vat_label">Tax ID</span>
                        </span>
                        already exists (<field name="same_vat_partner_id"
