    <record id="action_report_nfb" model="ir.actions.report">
        <field name="name">NFB Checklist</field>
        <field name="model">res.patients</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="tarkeez_neuro_clinic.model_res_patients"/>
        <field name="report_name">tarkeez_neuro_clinic.report_nfb_template</field>
        <field name="report_file">tarkeez_neuro_clinic.report_nfb_template</field>
        <field name="print_report_name">
            (object.name and 'Symptom Checklist - %s' % object.name or 'Symptom Checklist')
        </field>
    </record>

    <template id="report_nfb_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            /* Page settings */
                            @page {
                            size: A4;
                            margin: 10mm;
                            }

                            /* Header and footer */
                            .o_report_layout .header,
                            .o_report_layout .o_header {
                            padding: 4px 0 !important;
                            margin-bottom: 6px !important;
                            }
                            .o_report_layout .footer,
                            .o_report_layout .o_footer {
                            padding: 4px 0 !important;
                            margin-top: 6px !important;
                            font-size: 12px;
                            }

                            /* Section title */
                            .sc-title {
                            font-size: 18px;
                            font-weight: 700;
                            margin: 0 0 6px 0;
                            }

                            /* Subtle text */
                            .sc-subtle {
                            color: #666;
                            }

                            /* Meta table */
                            .sc-meta {
                            width: 100%;
                            margin: 6px 0;
                            }
                            .sc-meta td {
                            padding: 2px 6px;
                            font-size: 12px;
                            }

                            /* Symptom table */
                            .sc-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-top: 4px;
                            }
                            .sc-table th,
                            .sc-table td {
                            border: 1px solid #d9d9d9;
                            padding: 5px 7px;
                            font-size: 12px;
                            vertical-align: top;
                            }
                            .sc-table th {
                            background: #f5f5f5;
                            }
                            .sc-sec {
                            background: #eef3fb;
                            font-weight: 600;
                            }

                            /* Checkboxes */
                            .box {
                            display: inline-block;
                            width: 12px;
                            height: 12px;
                            border: 1px solid #888;
                            text-align: center;
                            line-height: 12px;
                            font-size: 12px;
                            border-radius: 2px;
                            }
                            .yes { color: #0a6; }
                            .no { color: #c33; }

                            /* Muted text */
                            .muted {
                            color: #888;
                            font-size: 12px;
                            }

                            /* Section row */
                            .sc-section-row th {
                            border-top: 2px solid #bcd;
                            }
                        </style>

                        <table style="border-collapse: separate; border-spacing:0; border:1px solid #000;
              border-radius:15px 50px 30px; background-color:#f5f5f5; display: table; margin: 10px auto;">
                            <tr>
                                <td style="font-weight: bold; font-size:20px; text-align: center; padding:15px 20px; color:#000;">
                                    <t t-if="o.age_group == 'child'">
                                        <span>Kids Symptom Checklist</span>
                                        <span style="margin-left:8px;">قائمة أعراض الأطفال</span>
                                    </t>
                                    <t t-elif="o.age_group == 'adult'">
                                        <span>Adults Symptom Checklist</span>
                                        <span style="margin-left:8px;">قائمة أعراض البالغين</span>
                                    </t>
                                    <t t-else="">
                                        <span>Symptom Checklist</span>
                                    </t>
                                </td>
                            </tr>
                        </table>


                        <div style="height:15px;"></div>


                        <table class="sc-table"
                               style="width:100%; border-collapse: separate; border-spacing:0; margin-top:10px;">
                            <tr>
                                <td style="width:15%; padding:8px; border:1px solid #d9d9d9; border-radius:6px; font-weight:bold;">
                                    Patient Code:
                                </td>
                                <td style="width:35%; padding:8px; border:1px solid #d9d9d9; border-radius:6px;">
                                    <span t-esc="o.code"/>
                                </td>
                                <td style="width:15%; padding:8px; border:1px solid #d9d9d9; border-radius:6px; font-weight:bold;">
                                    Patient:
                                </td>
                                <td style="width:35%; padding:8px; border:1px solid #d9d9d9; border-radius:6px;">
                                    <span t-esc="o.display_name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%; padding:8px; border:1px solid #d9d9d9; border-radius:6px; font-weight:bold;">
                                    Gender:
                                </td>
                                <td style="width:35%; padding:8px; border:1px solid #d9d9d9; border-radius:6px;">
                                    <span t-esc="o.gender"/>
                                </td>
                                <td style="width:15%; padding:8px; border:1px solid #d9d9d9; border-radius:6px; font-weight:bold;">
                                    Age:
                                </td>
                                <td style="width:35%; padding:8px; border:1px solid #d9d9d9; border-radius:6px;">
                                    <span t-esc="o.patient_age"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%; padding:8px; border:1px solid #d9d9d9; border-radius:6px; font-weight:bold;">
                                    Doctor:
                                </td>
                                <td style="width:35%; padding:8px; border:1px solid #d9d9d9; border-radius:6px;">
                                    <span t-esc="o.doctor_id.display_name or ''"/>
                                </td>
                                <td style="width:15%; padding:8px; border:1px solid #d9d9d9; border-radius:6px; font-weight:bold;">
                                    Session Date:
                                </td>
                                <td style="width:35%; padding:8px; border:1px solid #d9d9d9; border-radius:6px;">
                                    <span t-esc="o.date"/>
                                </td>
                            </tr>
                        </table>
                        <div style="height:15px;"></div>

                        <table class="sc-table">
                            <thead>
                                <tr>
                                    <th style="width:60%">Symptom / العرض</th>
                                    <th style="width:12%" class="text-center">Yes / نعم</th>
                                    <th style="width:12%" class="text-center">No / لا</th>
                                    <th style="width:16%">Notes / ملاحظات</th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-foreach="o.symptom_line_ids" t-as="line">

                                    <!-- Section row -->
                                    <t t-if="line.display_type == 'line_section'">
                                        <tr class="sc-section-row">
                                            <th class="sc-sec" colspan="4">
                                                <t t-esc="line.name or ''"/>
                                            </th>
                                        </tr>
                                    </t>

                                    <!-- Normal symptom row -->
                                    <t t-else="">
                                        <tr>
                                            <td>
                                                <div>
                                                    <t t-esc="line.name or ''"/>
                                                </div>
                                            </td>

                                            <td class="text-center">
                                                <span class="box yes">
                                                    <t t-if="line.present">✓</t>
                                                </span>
                                            </td>

                                            <td class="text-center">
                                                <span class="box no">
                                                    <t t-if="line.absent">✓</t>
                                                </span>
                                            </td>

                                            <td>
                                                <t t-esc="line.notes or ''"/>
                                            </td>
                                        </tr>
                                    </t>

                                </t>
                            </tbody>
                        </table>
                        <div style="height:15px;"></div>

                        <table class="sc-meta"
                               style="width:100%; border-collapse: separate; border-spacing:0; margin-top:10px;">
                            <!-- Header row -->
                            <tr>
                                <th style="width:50%; padding:8px; border:1px solid #d9d9d9; border-radius:6px 6px 0 0; background:#f5f5f5; text-align:left;">
                                    Core Symptoms ? / الأعراض الأساسية؟
                                </th>
                                <th style="width:50%; padding:8px; border:1px solid #d9d9d9; border-radius:6px 6px 0 0; background:#f5f5f5; text-align:left;">
                                    Any Medications or Reports? / أي أدوية أو تقارير؟
                                </th>
                            </tr>

                            <!-- Body row -->
                            <tr>
                                <td style="width:50%; padding:8px; border:1px solid #d9d9d9; border-radius:0 0 6px 6px; vertical-align:top;">
                                    <span t-esc="o.core_symptoms or ''"/>
                                </td>
                                <td style="width:50%; padding:8px; border:1px solid #d9d9d9; border-radius:0 0 6px 6px; vertical-align:top;">
                                    <span t-esc="o.medications or ''"/>
                                </td>
                            </tr>
                        </table>

                        <div style="height:15px;"></div>

                        <!-- Patient Table -->
                        <table class="sc-meta"
                               style="width:100%; border-collapse: separate; border-spacing:0; margin-top:10px;">
                            <!-- Header row -->
                            <tr>
                                <th style="width:50%; padding:6px; border:1px solid #d9d9d9; border-radius:6px 6px 0 0; background:#f5f5f5; text-align:left;">
                                    Patient Name / اسم المريض
                                </th>
                                <th style="width:50%; padding:6px; border:1px solid #d9d9d9; border-radius:6px 6px 0 0; background:#f5f5f5; text-align:left;">
                                    Patient Signature / توقيع المريض
                                </th>
                            </tr>

                            <!-- Body row -->
                            <tr>
                                <td style="width:50%; padding:4px 6px; border:1px solid #d9d9d9; border-radius:0 0 6px 6px; vertical-align:top; line-height:14px;">
                                    <span t-if="o.name" t-esc="o.name"/>
                                    <span t-if="not o.name" class="sc-subtle"
                                          style="margin-left:4px; border-bottom:1px solid #000; display:inline-block; min-width:120px;">
                                        ______________________
                                    </span>
                                </td>
                                <td style="width:50%; padding:4px 6px; border:1px solid #d9d9d9; border-radius:0 0 6px 6px; vertical-align:top; line-height:14px;">
                                    <span t-if="not o.signature" class="sc-subtle"
                                          style="margin-left:4px; border-bottom:1px solid #000; display:inline-block; min-width:120px;">
                                        ______________________
                                    </span>
                                    <t t-if="o.signature">
                                        <img t-att-src="'/web/image/%s/%s/signature' % (o._name, o.id)"
                                             style="max-height:60px; margin-left:4px; vertical-align:middle;"/>
                                    </t>
                                </td>
                            </tr>
                        </table>

                        <!-- Doctor Table -->
                        <table class="sc-meta"
                               style="width:100%; border-collapse: separate; border-spacing:0; margin-top:10px;">
                            <!-- Header row -->
                            <tr>
                                <th style="width:50%; padding:6px; border:1px solid #d9d9d9; border-radius:6px 6px 0 0; background:#f5f5f5; text-align:left;">
                                    Doctor Name / اسم الطبيب
                                </th>
                                <th style="width:50%; padding:6px; border:1px solid #d9d9d9; border-radius:6px 6px 0 0; background:#f5f5f5; text-align:left;">
                                    Doctor Signature / توقيع الطبيب
                                </th>
                            </tr>

                            <!-- Body row -->
                            <tr>
                                <td style="width:50%; padding:4px 6px; border:1px solid #d9d9d9; border-radius:0 0 6px 6px; vertical-align:top; line-height:14px;">
                                    <span t-if="o.doctor_id" t-esc="o.doctor_id.name"/>
                                    <span t-if="not o.doctor_id" class="sc-subtle"
                                          style="margin-left:4px; border-bottom:1px solid #000; display:inline-block; min-width:120px;">
                                        ______________________
                                    </span>
                                </td>
                                <td style="width:50%; padding:4px 6px; border:1px solid #d9d9d9; border-radius:0 0 6px 6px; vertical-align:top; line-height:14px;">
                                    <span t-if="not o.doctor_id.signature" class="sc-subtle"
                                          style="margin-left:4px; border-bottom:1px solid #000; display:inline-block; min-width:120px;">
                                        ______________________
                                    </span>
                                    <t t-if="o.doctor_id.signature">
                                        <img t-att-src="'/web/image/%s/%s/signature' % (o._name, o.id)"
                                             style="max-height:50px; margin-left:4px; vertical-align:middle;"/>
                                    </t>
                                </td>
                            </tr>
                        </table>


                        <div style="page-break-after:always"/>


                    </div>
                </t>
            </t>
        </t>
    </template>


