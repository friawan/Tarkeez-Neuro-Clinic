<odoo>
    <record id="action_export_balance_sheet" model="ir.actions.server">
        <field name="name">Export Balance Sheet</field>
        <field name="model_id" ref="base_accounting_kit.model_account_balance_report"/>
        <field name="binding_model_id" ref="base_accounting_kit.model_account_balance_report"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            action = env['export.balance.sheet.wizard'].create({}).export_excel()
        </field>
    </record>
</odoo>
